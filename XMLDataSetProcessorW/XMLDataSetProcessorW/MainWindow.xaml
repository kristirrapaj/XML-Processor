<Window x:Class="XMLDataSetProcessorW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLDataSetProcessorW"
        mc:Ignorable="d"
        Title="XML DataSet processor" Height="450" Width="800">
    <Grid Background="White">
            <StackPanel >
                <Image Source="https://img.freepik.com/premium-vector/pixel-glass-meme-boss-glass-pixel-like-boss-meme_148553-557.jpg?w=2000" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" />
                <Label Content="XML DataSet Processor 1.0.0" HorizontalAlignment="Center" FontSize="30" FontFamily="Georgia" ></Label>
                <Label Content="Enter the path to your XML Files:" HorizontalAlignment="Center" Margin="0,30,0,0"></Label>
                <TextBox x:Name="txtXMLPath" Width="500" Height="30" Margin="10"></TextBox>
                <Button x:Name="btnProcess" Content="Process" Width="100" Height="30" Margin="10" Click="ProcessDataButtonClick"></Button>
                <Label x:Name="errorLabel" HorizontalAlignment="Center" Foreground="Firebrick"></Label>
            </StackPanel>
            
    </Grid>
</Window>
